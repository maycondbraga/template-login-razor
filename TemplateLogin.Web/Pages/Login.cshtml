@page
@model TemplateLogin.Web.Pages.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginUserModel.UserName">User Name</label>
                    <input type="text" asp-for="LoginUserModel.UserName" class="form-control"/>
                    <span asp-validation-for="LoginUserModel.UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginUserModel.Password">Password</label>
                    <input type="password" asp-for="LoginUserModel.Password" class="form-control"/>
                    <span asp-validation-for="LoginUserModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="LoginUserModel.RememberMe" class="form-check-input"/>
                    <label class="checkbox-inline" asp-for="LoginUserModel.RememberMe">Remember Me?</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>