@page
@model TemplateLogin.Web.Pages.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterUserModel.UserName">User Name</label>
                    <input type="text" asp-for="RegisterUserModel.UserName" class="form-control" />
                    <span asp-validation-for="RegisterUserModel.UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterUserModel.Email">Email Address</label>
                    <input type="text" asp-for="RegisterUserModel.Email" class="form-control" />
                    <span asp-validation-for="RegisterUserModel.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterUserModel.Password">Password</label>
                    <input type="password" asp-for="RegisterUserModel.Password" class="form-control" />
                    <span asp-validation-for="RegisterUserModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterUserModel.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="RegisterUserModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegisterUserModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>